<?xml version="1.0" encoding="UTF-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

  <style
    name="Theme.IOIOGimbal"
    parent="@style/Theme.AppCompat.Light.DarkActionBar"
  >
    <!-- The "Android 2.0" title bar -->
    <item name="android:windowTitleBackgroundStyle">@style/titleBar</item>
    <item name="android:windowTitleSize">@dimen/titleBarHeight</item>
  </style>

  <style
    name="Theme.IOIOGimbal.NoTitle"
    parent="Theme.IOIOGimbal"
  >
    <item name="android:windowNoTitle">true</item>
  </style>

  <style
    name="Theme.IOIOGimbal.NoTitle.Fullscreen"
    parent="Theme.IOIOGimbal.NoTitle"
  >
    <item name="android:windowFullscreen">true</item>
    <item name="android:windowContentOverlay">@null</item>
  </style>

  <style
    name="Theme.Dialog.IOIOGimbal"
    parent="android:Theme.Dialog"
  />

  <style
    name="Theme.IOIOGimbal.Transparent"
    parent="Theme.IOIOGimbal"
  >
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:windowFrame">@null</item> 
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:backgroundDimEnabled">true</item>
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
  </style>

</resources>
